{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@test/api/common/authorization": ["libs/api/common/authorization/src/index.ts"],
      "@test/api/common/config": ["libs/api/common/config/src/index.ts"],
      "@test/api/common/crypto": ["libs/api/common/crypto/src/index.ts"],
      "@test/api/common/prisma": ["libs/api/common/prisma/src/index.ts"],
      "@test/api/core/commodity": ["libs/api/core/commodity/src/index.ts"],
      "@test/api/core/shop": ["libs/api/core/shop/src/index.ts"],
      "@test/api/core/user": ["libs/api/core/user/src/index.ts"],
      "@test/api/feature/auth": ["libs/api/feature/auth/src/index.ts"],
      "@test/api/util/object": ["libs/api/util/object/src/index.ts"],
      "@test/shared/data-access/auth": ["libs/shared/data-access/auth/src/index.ts"],
      "@test/shared/data-access/base": ["libs/shared/data-access/base/src/index.ts"],
      "@test/shared/data-access/shop": ["libs/shared/data-access/shop/src/index.ts"],
      "@test/shared/data-access/user": ["libs/shared/data-access/user/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
